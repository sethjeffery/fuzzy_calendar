!!!
%html{prefix: "og: http://ogp.me/ns#"}
  %head
    %title
      = content_for?(:title) ? yield(:title) : "Fuzzy Calendar"

    = tag :meta, property: "og:title", content: (content_for?(:title) ? yield(:title) : "Fuzzy Calendar")
    = tag :meta, property: "og:image", content: image_url("sprites-retina/logo-header.png")
    = tag :meta, property: "og:url",   content: request.url
    = tag :meta, property: "og:type",  content: "website"
    = tag(:meta, property: "og:description", content: yield(:description)) if content_for?(:description)
    = tag :meta, "http-equiv" => "X-UA-Compatible", content: "IE=edge"
    = tag :meta, name: "viewport", content: "width=device-width, initial-scale=1"

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    /[if IE]
      = stylesheet_link_tag    'legacy', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %link{ rel: "icon", type: "image/x-icon", href: "/favicon.png" }

  %body
    #fb-root
    :javascript
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.4&appId=848603918570956";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));

    = render "navbar"

    = yield

    - unless logged_in?
      = render "modal_login"
